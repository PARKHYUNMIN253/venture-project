@model BizOneShot.Light.Models.ViewModels.FaqViewModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz >  a > .top_menu > .header_customer ').addClass('on');
        $('#naviwrap_biz > .navi_biz >  a > .top_menu > .top_text_customer ').addClass('on');

        //Cs menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_faq').addClass('on');

    });
</script>

<div id="sub_rightwrap">
    <div class="sub_right_title right_text"><img src="~/images/list.png" class="icon_list" />FAQ 관리</div>

    <div class="tablewrap">
        <table>
            <caption>faq 상세보기</caption>
            <colgroup>
                <col width="120px" />
                <col width="255px" />
                <col width="120px" />
                <col width="255px" />
            </colgroup>
            <tr>
                <th>분류</th>
                <td>@Model.QclNm</td>
                <th>등록일자</th>
                <td>@Model.RegDt.GetValueOrDefault().ToShortDateString()</td>
            </tr>
            <tr>
                <th>질문</th>
                <td colspan="3" rowspan="" class="que">@Html.Raw(Model.QstTxt)</td>
            </tr>
            <tr>
                <th>답변</th>
                <td colspan="3" class="read">@Html.Raw(Model.AnsTxt)</td>
            </tr>
        </table>
    </div><!--tablewrap//-->
    <div id="btnwrap_sub">
        <a href="@Url.Action("ModifyFaq", "Cs", new { @faqSn=Model.FaqSn })" class="btn_a mint left">수정</a>
        <a href="@Url.Action("DeleteFaq", "Cs", new { @faqSn=Model.FaqSn })" class="btn_a red left" id="btn_delete">삭제</a>
        <a href="@Url.Action("Faq","Cs")" class="btn_a gray right">목록</a>
    </div><!--btnwrap//-->

</div><!--sub_rightwrap//-->


