@model BizOneShot.Light.Models.ViewModels.BasicSurveyReportViewModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz >  a > .top_menu > .header_report01 ').addClass('on');
        $('#naviwrap_biz > .navi_biz >  a > .top_menu > .top_text_report ').addClass('on');
        //Cs menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_basicReport').addClass('on');
        $('#sub_leftwrap a.list_29').addClass('list_on');

        if ($('#Status').val() !== "C") {
            $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.list_33').hide();
    }
        
    });

</script>
@Styles.Render("~/css/print")
<div id="sub_rightwrap_report">
    @Html.HiddenFor(model => model.QuestionSn, new { @id = "QuestionSn" })
    @Html.Hidden("BizWorkSn", ViewBag.paramModel.BizWorkSn as string)
    @Html.Hidden("CompSn", ViewBag.paramModel.CompSn as string)
    @Html.Hidden("BizWorkYear", ViewBag.paramModel.BizWorkYear as string)
    @Html.Hidden("QuestionSn", ViewBag.paramModel.QuestionSn as string)
    @Html.Hidden("Status", ViewBag.paramModel.Status as string)
    @Html.Hidden("CompNm", ViewBag.paramModel.CompNm as string)
    @Html.Hidden("PageNum", ViewBag.paramModel.PageNum as string)

    <div class="sub_right_title right_text"><img src="~/images/list.png" class="icon_list" />기초경영역량 보고서</div>

    <div class="sub_report_checkbox">
        <div class="compname">@Model.CompNm</div>
        <div class="pagenum">19/27</div>
        <div class="report_main_top2">
            <div class="title_medium">
                Ⅲ. 성장 로드맵 제안 _<span class="top2_right w475_span">
                    기초조사 및
                    면담결과를 토대로 성장로드맵을 제안합니다. 다만, 이 결과는 짧은 조사를 통해서 도출된 것이기 때문에 경영에
                    참고만 하셔야 하며, 실제 실행에 있어서는 보다 면밀한 전문가와의 상담을 권장합니다.
                </span>
            </div>
        </div>
        <div class="report_main_mid">
            <table class="list_table top_w304">
                <colgroup>
                    <col width="30%">
                    <col width="70%">
                </colgroup>
                <tbody>
                    <tr>
                        <td rowspan="4" class="left_memo">성장 로드맵 제안</td>
                        <td class="chapter">• 성장전략 유형검토</td>
                    </tr>
                    <tr>
                        <td class="chapter">• 단계별 성장전략</td>
                    </tr>
                    <tr>
                        <td class="chapter">• 부분별 추진전략</td>
                    </tr>
                    <tr>
                        <td class="chapter last_memo">• 단계별 역량강화 로드맵</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
    <!--container//-->
    <div id="btnwrap_sub" class="bottom_left2">

        <div class="rightwrap left">
            <a href="@Url.Action("RiskMgmtEvalProfession", "BasicSurveyReport", new { area = "" , BizWorkSn = Model.BizWorkSn, CompSn = Model.CompSn, BizWorkYear = Model.BizWorkYear, Status = Model.Status, QuestionSn = Model.QuestionSn})" class="btn_a gray left" value="이전">이전</a>

        </div>
        <div class="rightwrap right">
            <a href="@Url.Action("GrowthStrategyType", "BasicSurveyReport", new { area = "" , BizWorkSn = Model.BizWorkSn, CompSn = Model.CompSn, BizWorkYear = Model.BizWorkYear, Status = Model.Status, QuestionSn =Model.QuestionSn})" class="btn_a gray right" value="다음">다음</a>

        </div>
    </div>
</div>
