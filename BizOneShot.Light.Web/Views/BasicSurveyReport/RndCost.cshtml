    function RptCommentPopupOpen() {
        //var year = $('#BizWorkYear').val();
        //var month = $('#SelectMonth').val();
        var questionSn = $('#QuestionSn').val();
        var bizWorkSn = $('#BizWorkSn').val();
        //var status = $('#Status').val();
