    function generateUrlList() {
        for (i in pageNameAr) {
            var str = "/BasicSurveyReport/";
            str += pageNameAr[i];
            str += "?";
            str += "&BizWorkSn=" + bizWorkSn;
            str += "&CompSn=" + compSn;
            str += "&BizWorkYear=" + bizWorkYear;
            str += "&Status=" + status;
            str += "&QuestionSn=" + questionSn;
            urlList.push(str);

            var div = $("<div>");
            div.addClass("pages");
            div.addClass(pageNameAr[i]);
            $("#Container").append(div);

        }
    }

    function startTransaction() {

        for (i in urlList) {
            var url = urlList[i];
            var pageName = pageNameAr[i];
            $.ajax({
                method: "GET",
                url: url,
                pageName: pageName,
                success: function (o) {
                    o = $(o);
                    scriptString += o.find("script").text();
                    o.find("script").html("");
                    $("#Container div.pages." + this.pageName).append(o.find("div.sub_report_checkbox"));
                    

                    $("input").prop("readonly", true);
                    $("input[type=radio]").attr("disabled", true);
                    $("input[type=checkbox]").attr("disabled", true);
                    $("textarea").prop("readonly", true);

                    loadedPages++;

                    if (loadedPages == allPages) {
                        loadChart();
                        doneWaiting();
                    }
                    
                }
            })
        }
    }

    function loadChart() {
