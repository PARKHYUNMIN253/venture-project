            $('#mainForm input').attr('disabled', true);
            $('#mainForm textarea').attr('disabled', true);
            $('.mentorcomment').hide();
        }
        else {
            $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.list_33').hide();
