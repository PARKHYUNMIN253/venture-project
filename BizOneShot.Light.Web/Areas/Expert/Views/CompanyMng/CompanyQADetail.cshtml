@model BizOneShot.Light.Models.ViewModels.QaRequstViewModels

@{
    Layout = "~/Areas/Expert/Views/Shared/_MainLayout.cshtml";
}


<script>
    $(document).ready(function () {
        //top menu
        $('#naviwrap_biz > .navi_biz >  a > .top_menu > .header_company_manage ').addClass('on');
        $('#naviwrap_biz > .navi_biz >  a > .top_menu > .top_text_company ').addClass('on');
        //Accounting menu
        $('#sub_leftwrap > .sub_gnbwrap > ul > li > a.gnb_QnA').addClass('on');
    });
</script>

<div id="sub_rightwrap">
    <div class="sub_right_title right_text"><img src="~/images/list.png" class="icon_list" />답변 작성하기</div>
    <div class="tablewrap">
        <table>
            <colgroup>
                <col width="100px" />
                <col width="260px" />
                <col width="100px" />
                <col width="150px" />
                <col width="140px" />
            </colgroup>
            <tr>
                <th>문의기업명</th>
                <td>@Model.QuestionComNm</td>
                <th>사업자번호</th>
                <td colspan="2">@Model.QuestionRegistrationNo</td>
            </tr>
            <tr>
                <th>등록일자</th>
                <td colspan="4">@Model.AskDt.GetValueOrDefault().ToShortDateString()</td>
            </tr>
            <tr>
                <th>문의제목</th>
                <td colspan="4">@Model.Subject</td>
            </tr>
            <tr>
                <th>문의 내용</th>
                <td colspan="4" class="read">@Html.RepladeHtmlText(Model.Question)</td>
            </tr>
        </table>
    </div><!--tablewrap//-->
    <div class="line_dot20"></div>

    <div class="tablewrap">
        <!--답변등록-->
        <table>
            <colgroup>
                <col width="105px">
                <col width="645px">
            </colgroup>
            <tr>
                <th rowspan="2">답변</th>
                <td colspan="4" class="read">@Html.RepladeHtmlText(Model.Answer)</td>
            </tr>
        </table>
    </div><!--tablewrap//--><!--답변등록 끝-->
    <div id="btnwrap_sub">
        <div class="rightwrap">
            <a href="@Url.Action("CompanyQAList","CompanyMng")" class="btn_a gray right">목록</a>
            @if(Model.AnsYn != "Y")
            { 
                <a href="@Url.Action("ModifyCompanyQA","CompanyMng", new { usrQaSn = @Model.UsrQaSn })" class="btn_a mint right rightmargin">수정</a>
            }
        </div>
    </div>

</div><!--sub_rightwrap//-->